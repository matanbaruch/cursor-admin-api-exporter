{
  "name": "Cursor Admin API Exporter Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.24"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y make build-essential",

  "postCreateCommand": [
    "bash", 
    "-c", 
    "if [ -f .devcontainer/postCreateCommand.sh ]; then bash .devcontainer/postCreateCommand.sh; fi"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.vscode-json",
        "ms-vscode.makefile-tools",
        "redhat.vscode-yaml",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go",
        "go.lintTool": "golangci-lint",
        "go.lintFlags": ["--fast"],
        "go.formatTool": "goimports",
        "go.testFlags": ["-v"],
        "go.coverOnSave": true,
        "go.coverageDecorator": {
          "type": "gutter"
        },
        "files.eol": "\n",
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        }
      }
    }
  },

  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Cursor Admin API Exporter",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "vscode",

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "containerEnv": {
    "CURSOR_API_URL": "https://cursor.sh",
    "LISTEN_ADDRESS": ":8080",
    "METRICS_PATH": "/metrics",
    "LOG_LEVEL": "debug"
  }
}